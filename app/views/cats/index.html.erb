<div class="search-container">

  <h1 class="mx-auto">Find your perfect angry cat!</h1>
  <%= simple_form_for :search, url: root_path, method: :get do |f| %>
    <div class="search-form-control form-group">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" />
      <button name="button" type="submit" class="btn btn-flat">
        <i class="fas fa-search"></i> Search
      </button>
    </div>
  <% end %>

</div>
  <h3 class="mx-auto">Filters</h3>

<h1>Top 10 angriest cats</h1>
<hr>
<div class="cards">
<% @cats.each do |cat| %>


<div class="card">
  <img src="..." class="card-img-top" alt="...">
  <div class="card-body">
    <h5 class="card-title"><%= cat.name %> </h5>
    <p class="card-text">Cat bio</p>
    <a href="#" class="btn btn-primary">Book this cat</a>
  </div>
</div>

<% end %>

</div>

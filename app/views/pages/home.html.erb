<!-- Hero -->
<div class="p-5 text-center bg-image banner rounded-3" style="
    background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= image_path "background.png" %>');
    height: 400px;">
  <div class="mask">
    <div class="d-flex justify-content-center align-items-center h-100">
      <div class="text-white">
        <h1 id="neonText" class="mb-5">Looking for trouble?</h1>
        <h4 class="mb-3">Search for...</h4>
        <span><%= link_to "ANGRY CATS", cats_path, class: 'btn btn-outline-light btn-lg'%></span>
      </div>
    </div>
  </div>
